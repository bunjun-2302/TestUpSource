<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imaginebackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </ImageView>

    <View
        android:background="@drawable/custom_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"></View>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/imaginebackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imagineViewbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageView>
        <TextView
            android:id="@+id/titlebannerbaihat"
            android:textSize="20sp"
            android:textColor="#E83E0A"
            android:text="Anh yeu em"
            android:textStyle="bold"
            android:layout_toRightOf="@id/imagineViewbanner"
            android:layout_alignTop="@id/imagineViewbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_below="@id/titlebannerbaihat"
            android:layout_toRightOf="@id/imagineViewbanner"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titlenoidungbaihat"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="jun va meo la hai dua yeu nhau"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>