<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvSTTdsbh"
            android:layout_margin="15dp"
            android:text="1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvTenbhTrongdsbh"
            android:layout_toRightOf="@+id/tvSTTdsbh"
            android:singleLine="true"
            android:text="dung yeu huyen nhat"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:id="@+id/tvTenCStrongdsbh"
            android:layout_below="@+id/tvTenbhTrongdsbh"
            android:layout_toRightOf="@id/tvSTTdsbh"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:textColor="#F30808"
            android:ellipsize="end"
            android:text="huyen meo meo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <ImageView
            android:id="@+id/imgvLuotthichinqc"
            android:layout_margin="5dp"
            android:src="@drawable/iconlove"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>