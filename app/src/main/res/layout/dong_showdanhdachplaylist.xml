<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/FramelayoutDsPlaylist"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgvHinhplShowallDanhsachpl"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_width="180dp"
            android:layout_height="180dp"></ImageView>

    </FrameLayout>
    <TextView
        android:id="@+id/tvTenplShowallDspl"
        android:maxLines="2"
        android:maxWidth="200dp"
        android:gravity="left"
        android:text="Anh khong sai"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/mauhongtim"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/tvTencsShowallDspl"
        android:text="Nghệ sĩ tổng hợp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textColor="#000000"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>