<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgvBaihatyeuthich"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp">

    </ImageView>
    <TextView
        android:id="@+id/tvtenbaihatyeuthich"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imgvBaihatyeuthich"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Hát cho nụ cười"
        android:textColor="#f20"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tvtencasibaihatyeuthich"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tvtenbaihatyeuthich"
        android:layout_toRightOf="@id/imgvBaihatyeuthich"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Thuy chi"
        android:textColor="#787271"
        android:textSize="18sp"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/imgvLuotthich"
        android:src="@drawable/iconlove"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"></ImageView>
</RelativeLayout>